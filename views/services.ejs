<% include ./partials/header.ejs %>


<% if (user.message != "") { %>
    <p><em><%=user.message%></em></p>
<% } %>

<div class="container">
    <form action="/student/services" method="post">
        <div class="form-group">
            <label for="request[student]">Nama Mahasiswa</label>
            <input type="text" class="form-control" name="request[student]" value="<%=user.name%>" readonly>
        </div>
        <div class="form-group">
                <label>NIM Mahasiswa</label>
            <input type="text" class="form-control" value="<%=user.nim%>" disabled>
        </div>
        <div class="form-group">
            <label for = "request[type]">Kategori Layanan</label>
            <select class="form-control" name="request[type]" required>
                <option value="konseling">Konseling</option>
                <option value="terapi">Terapi</option>
                <option value="seminar">Seminar</option>
                <option value="training">Training</option>
                <option></option>
            </select>
        </div>
        <div class="form-group">
            <input id="input" width="312" name="request[date]" required />
            <script>
                $('#input').datetimepicker({ footer: true, modal: true });
            </script>
        </div>
        <div class="form-group">
            <input type="hidden" name="request[status]" value="pending">
        </div>
        <input type="submit" class="btn btn-light">
    </form>
</div>

<% include ./partials/footer.ejs %>